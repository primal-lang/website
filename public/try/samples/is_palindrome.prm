isPalindrome(string) = isPalindromeHelper(string, 0, str.length(string) - 1)

isPalindromeHelper(string, start, end) =
    if (start >= end)
        true
    else if (string[start] != string[end])
        false
    else
        isPalindromeHelper(string, start + 1, end - 1)

main = isPalindrome("level")