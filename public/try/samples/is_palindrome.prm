isPalindrome(string) = isPalindrome.helper(string, 0, str.length(string) - 1)

isPalindrome.helper(string, start, end) =
    if (start >= end)
        true
    else if (string[start] != string[end])
        false
    else
        isPalindrome.helper(string, start + 1, end - 1)

main = isPalindrome("level")